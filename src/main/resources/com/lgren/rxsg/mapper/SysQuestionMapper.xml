<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgren.rxsg.mapper.SysQuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lgren.rxsg.entity.SysQuestion">
        <id column="id" property="id" />
        <result column="question" property="question" />
        <result column="option1" property="option1" />
        <result column="option2" property="option2" />
        <result column="option3" property="option3" />
        <result column="option4" property="option4" />
        <result column="answer" property="answer" />
        <result column="info" property="info" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, question, option1, option2, option3, option4, answer, info
    </sql>

</mapper>
